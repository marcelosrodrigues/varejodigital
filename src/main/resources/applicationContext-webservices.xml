        http://jax-ws.dev.java.net/spring/servlet http://jax-ws.dev.java.net/spring/servlet.xsd">

    <wss:binding url="/produtos.svc">
        <wss:service>
            <ws:service bean="#Produtos"/>
        </wss:service>
    </wss:binding>

</beans>